

#include <stdio.h>
#include <stdlib.h>

/* Node Structure */
struct Node
{
    int data;
    struct Node *prev;
    struct Node *next;
};

struct Node *head = NULL;

/* Create Node */
struct Node* createNode(int value)
{
    struct Node *newNode =
        (struct Node*)malloc(sizeof(struct Node));

    newNode->data = value;
    newNode->prev = NULL;
    newNode->next = NULL;

    return newNode;
}

/* Append Node (Insert at End) */
void appendNode(int value)
{
    struct Node *newNode = createNode(value);

    if(head == NULL)
    {
        head = newNode;
        printf("List Created & Node Added!\n");
        return;
    }

    struct Node *temp = head;
    while(temp->next != NULL)
        temp = temp->next;

    temp->next = newNode;
    newNode->prev = temp;

    printf("Node Appended Successfully!\n");
}

/* Traverse List */
void traverse()
{
    struct Node *temp = head;

    if(head == NULL)
    {
        printf("List is Empty!\n");
        return;
    }

    printf("Doubly Linked List: ");
    while(temp != NULL)
    {
        printf("%d <-> ", temp->data);
        temp = temp->next;
    }
    printf("NULL\n");
}

/* Search Node */
void searchNode(int value)
{
    struct Node *temp = head;

    while(temp != NULL)
    {
        if(temp->data == value)
        {
            printf("Node Found: %d\n", value);
            return;
        }
        temp = temp->next;
    }

    printf("Node Not Found!\n");
}

/* Delete Node */
void deleteNode(int value)
{
    struct Node *temp = head;

    while(temp != NULL && temp->data != value)
        temp = temp->next;

    if(temp == NULL)
    {
        printf("Node Not Found!\n");
        return;
    }

    if(temp == head)
        head = temp->next;

    if(temp->next != NULL)
        temp->next->prev = temp->prev;

    if(temp->prev != NULL)
        temp->prev->next = temp->next;

    free(temp);

    printf("Node Deleted Successfully!\n");
}

/* Main Menu */
int main()
{
    int choice, value;

    while(1)
    {
        printf("\n--- DOUBLY LINKED LIST MENU ---\n");
        printf("1. Create / Append Node\n");
        printf("2. Traverse\n");
        printf("3. Delete Node\n");
        printf("4. Search Node\n");
        printf("5. Exit\n");

        printf("Enter Choice: ");
        scanf("%d", &choice);

        switch(choice)
        {
            case 1:
                printf("Enter Value: ");
                scanf("%d", &value);
                appendNode(value);
                break;

            case 2:
                traverse();
                break;

            case 3:
                printf("Enter Value to Delete: ");
                scanf("%d", &value);
                deleteNode(value);
                break;

            case 4:
                printf("Enter Value to Search: ");
                scanf("%d", &value);
                searchNode(value);
                break;

            case 5:
                exit(0);

            default:
                printf("Invalid Choice!\n");
        }
    }

    return 0;
}
